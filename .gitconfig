[user]
  name = Ian Hirschfeld
  email = ianh7976@gmail.com
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  a = add
  aa = add -A
  ap = add -p
  ####################
  br = branch
  brd = branch -d
  brdf = branch -D
  ####################
  ci = commit
  cm = commit -m
  cam = commit -am
  ####################
  co = checkout
  cob = checkout -b
  ####################
  df = diff
  ####################
  mg = merge --no-ff
  mgm = merge master
  ####################
  pl = pull
  plr = pull --rebase
  plro = pull --rebase origin
  ####################
  pu = push
  puo = push origin
  pufo = push -f origin
  puom = push origin master
  puh = push heroku
  puhm = push heroku master
  pup = push production
  pupm = push production master
  ####################
  rb = rebase
  rbi = rebase -i
  rbm = rebase master
  rbc = rebase --continue
  rbs = rebase --skip
  rba = rebase --abort
  ####################
  sa = stash
  sac = stash clear
  sad = stash drop
  sal = stash list
  sap = stash pop
  sas = stash show
  ####################
  st = status
[filter "hawser"]
  clean = git hawser clean %f
  smudge = git hawser smudge %f
  required = true
[core]
  excludesfile = /Users/hirsch/.gitignore_global
